<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer glow ring -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50%"
                android:startColor="#334DDFFF"
                android:endColor="#004DDFFF" />
            <size android:width="220dp" android:height="220dp" />
        </shape>
    </item>

    <!-- Mid ring -->
    <item
        android:left="20dp"
        android:top="20dp"
        android:right="20dp"
        android:bottom="20dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50%"
                android:startColor="#224DDFFF"
                android:endColor="#004DDFFF" />
        </shape>
    </item>

    <!-- Inner circle background -->
    <item
        android:left="40dp"
        android:top="40dp"
        android:right="40dp"
        android:bottom="40dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50%"
                android:startColor="#FF1A0050"
                android:centerColor="#FF0D0040"
                android:endColor="#FF0A0033" />
            <stroke
                android:width="1dp"
                android:color="#554DDFFF" />
        </shape>
    </item>

</layer-list>
